---
import Layout from '../layouts/Layout.astro';
const posts = await Astro.glob('./posts/*.mdx')
import '../styles/global.css'
---

<Layout title="Jaalma">
	<main class="text-center">
		<h1 class="text-8xl">Welcome to <span class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">Jaalma's Blog</span></h1>
		<div id="about-section">
			<p>aaaa</p>
		</div>
		<div>
			<h2 class="font-extrabold bg-clip-text text-5xl">Posts</h2>
			<ul role="list" class="">
				{posts.map(post => 
					<article class="shadow-2xl m-12"> {/*todo: extract this to card component*/}
						<h1>{post.frontmatter.title}</h1>
						<p class="text-gray-500">{post.frontmatter.publishDate}</p>
						<p>{post.frontmatter.excerpt}</p>
						<a class="p-8" href={`/${post.frontmatter.slug}`}><div class="bg-purple-400 border-2 text-white">Read More</div></a>
					</article>
				)}
			</ul>
		</div>
	</main>
</Layout>