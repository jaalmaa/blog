---
import Layout from '@layouts/Layout.astro';
import PostCard from '@components/PostCard.astro';
import type { frontmatter } from './index.astro';
import '../styles/global.css';

const posts = await Astro.glob<frontmatter>('./posts/*.mdx')
posts.sort((a, b) => Date.parse(b.frontmatter.publishDate) - Date.parse(a.frontmatter.publishDate));
---

<Layout title="Posts">
    <main class="h-full mx-96">
        <a href="/" class="group">
            <span class="bg-left-bottom bg-gradient-to-r from-purple-500 to-pink-600 bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-300 ease-in-out">‚Üê Home</span>
        </a>
        <div class="text-center">
            <h1 class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">All Posts</h1>
            <div>
                categories
            </div>
            <div>
                { posts.map((post: any) =>
                    <PostCard post={ post } />
                )}
            </div>
        </div>
    </main>
</Layout>