---
import Layout from '@layouts/Layout.astro';
import HomeButton from '@components/HomeButton.astro';
---

<Layout title="Uh oh! Page not found">
    <div class="w-screen max-h-screen text-center">
        <h1 class="lg:text-5xl text-xl py-4 font-medium text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">Page not found!</h1>
        <p class="lg:text-xl text-md">This page does not exist.</p>
        <div class="p-4">
            <HomeButton to={ "/" } />
        </div>
    </div>
</Layout>