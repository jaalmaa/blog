---
import '../styles/global.css';

const { headings } = Astro.props;
---

<div class="w-full p-4 sticky top-16 rounded-xl">
    <a href="/" class="group">
        <span class="bg-left-bottom bg-gradient-to-r from-purple-500 to-pink-600 bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-300 ease-in-out">Home</span>
    </a>
    <p class="text-center font-semibold text-2xl text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">Navigation</p>
    { headings.map((heading: any) => 
        <a href={`#${heading.slug}`}>
            <div class="hover:text-white hover:bg-purple-100 transition ease-in-out hover:translate-x-0.5 rounded-2xl px-2">
                { heading.depth === 1 ? <p class="text-xl">{ heading.text }</p> : <p class="text-sm">{ heading.text }</p> }
            </div>
        </a>
    )}
</div>